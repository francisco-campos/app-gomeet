<%= form_for(work_shop, :html => {class: '', 'role' => 'form'}) do |f| %>
  <% if work_shop.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(work_shop.errors.count, "error") %> prohibited this work_shop from being saved:</h2>

      <ul>
      <% work_shop.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :title, "Título" %>
    <%= f.text_field :title, :class => "form-control" %>
    <p class="help-block">Ingresa el título de tu taller.</p>
  </div>

  <div class="field form-group">
    <%= f.label :about, "De que se trata" %>
    <%= f.text_area :about, :class => "form-control" %>
    <p class="help-block">Explica de que se trata de tu taller y trata de convencer a tus clientes.</p>
  </div>

  <div class="field form-group">
    <%= f.label :location, "Donde estaremos" %>
    <%= f.text_area :location, :class => "form-control" %>
    <p class="help-block">Explica donde estarán durante el taller.</p>
  </div>

  <div class="field form-group">
    <%= f.label :includes, "Qué incluye" %>
    <%= f.text_area :includes, :class => "form-control" %>
    <p class="help-block">Detalla todos los beneficios o materiales que incluye tu taller</p>
  </div>

  <div class="field form-group">
    <%= f.label :group_size, "Tamaño del grupo" %>
    <%= f.text_field :group_size, :class => "form-control" %>
    <p class="help-block">Explica el tamaño máximo que tendrá el grupo que participara en tu taller</p>
  </div>

  <div class="field form-group">
    <%= f.label :requirements, "Requisitos para los clientes" %>
    <%= f.text_area :requirements, :class => "form-control" %>
    <p class="help-block">Detalla todos los requisitos que deben cumplir tus clientes antes de tomar el taller.</p>
  </div>

  <div class="field form-group">
    <%= f.label :about_host, "Sobre ti" %>
    <%= f.text_area :about_host, :class => "form-control" %>
    <p class="help-block">Cuentanos algo de ti y sobre tus cualidades para realizar este taller</p>
  </div>

  <div class="actions">
    <%= f.submit "Crear Taller", :class => "btn btn-default" %>
  </div>
<% end %>
