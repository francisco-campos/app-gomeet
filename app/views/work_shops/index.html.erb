<p id="notice"><%= notice %></p>

<h1>Work Shops</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>About</th>
      <th>Location</th>
      <th>Requirements</th>
      <th>Includes</th>
      <th>Group size</th>
      <th>About host</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @work_shops.each do |work_shop| %>
      <tr>
        <td><%= work_shop.title %></td>
        <td><%= work_shop.about %></td>
        <td><%= work_shop.location %></td>
        <td><%= work_shop.requirements %></td>
        <td><%= work_shop.includes %></td>
        <td><%= work_shop.group_size %></td>
        <td><%= work_shop.about_host %></td>
        <td><%= work_shop.active %></td>
        <td><%= link_to 'Show', work_shop %></td>
        <td><%= link_to 'Edit', edit_work_shop_path(work_shop) %></td>
        <td><%= link_to 'Destroy', work_shop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Work Shop', new_work_shop_path %>
